@page "/Edit"

@inject ITokenService Tokens
@inject NavigationManager Navigation

<style>
    body {
        height: 100%;
    }

    html {
        height: 100%;
    }

    .login {
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: 1fr repeat(3, 100px) 1fr;
        grid-template-rows: 1fr repeat(5, 40px) 1fr;
        grid-column-gap: 0px;
        grid-row-gap: 8px;
    }

    .login input {
        width: 100%;
    }

    .login * {
        align-self: center;
        justify-self: center;
        width: 100%;
    }

    .title {
        grid-area: 2 / 3 / 3 / 4;
        color: white;
    }

    .username {
        grid-area: 3 / 2 / 4 / 5;
    }

    .password {
        grid-area: 4 / 2 / 5 / 5;
    }

    .checkButton {
        grid-area: 5 / 3 / 6 / 4;
    }

    .alert {
        grid-area: 6 / 2 / 7 / 5;
    }
</style>

<div class="login">
    <div class="title">
        Давай заходи
    </div>

    <div class="username">
        <input type="text" />
    </div>

    <div class="password">
        <input type="password" />
    </div>

    <div class="checkButton">
        <button @onclick="Check">Захожу</button>
    </div>

    <div class="alert">

    </div>
</div>

@code {
    string Username { get; set; }
    string Password { get; set; }

    void Check()
    {
        var token = Tokens.GetToken();

        Navigation.NavigateTo($"/{token}");
    }
}
